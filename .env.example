# ============================================
# API CONFIGURATION
# ============================================
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8006

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite:///./geofy_imagery.db

# ============================================
# GEHISTORICALIMAGERY CLI
# ============================================
GEHISTORICALIMAGERY_PATH=/usr/local/bin/GEHistoricalImagery
IMAGERY_PROVIDER=google

# ============================================
# AWS S3 (Image Storage)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=geofy-imagery
AWS_S3_REGION=us-east-1

# ============================================
# GOOGLE GEMINI AI
# ============================================
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-flash

# ============================================
# STORAGE PATHS
# ============================================
TEMP_STORAGE_PATH=./storage/temp
LOG_STORAGE_PATH=./storage/logs
CACHE_STORAGE_PATH=./storage/cache

# ============================================
# PROCESSING SETTINGS
# ============================================
MAX_CONCURRENT_JOBS=3
DOWNLOAD_TIMEOUT=300
AI_ANALYSIS_TIMEOUT=120

# ============================================
# WEBHOOK SETTINGS
# ============================================
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT=30

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=30
TILE_DOWNLOAD_LIMIT_PER_HOUR=100

# ============================================
# DATE RANGE
# ============================================
MIN_YEAR=2018
MAX_YEAR=2025